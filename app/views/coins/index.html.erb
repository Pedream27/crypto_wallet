<p style="color: green"><%= notice %></p>

<h1>Moeda</h1>
<table>
  <thead>
    <th>Discrição</th>
    <th>Sigla</th>
    <th>Imagem</th>
    <th colsplan="3"></th>
  </thead>
  <tbody>
    <% @coins.each do |coin|%>
    <tr>
      <td> <%= coin.description%></td>
      <td><%= coin.acronym%></td>
      <td><%= image_tag coin.url_image, width:25 , height:25%> </td>
      <td><%= link_to 'Mostrar', coin %> </td>
    </tr>
  </tbody>
  <%end%>
</table>
<%= link_to "Nova moeda", new_coin_path %>